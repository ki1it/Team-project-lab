    - var i=0;
        mixin rowsTable(Gos, VIN, Brand,  Year, Model , id)
            tr

                //td #{id}
                td #{Gos}
                td #{VIN}
                td #{Brand}
                td #{Model}
                td #{Year}
                td
                    a#navbarDropdownMenuLink.nav-link(href='#' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                        i.material-icons menu
                        p.d-lg-none.d-md-block
                            | Some Actions
                    .dropdown-menu.dropdown-menu-right(aria-labelledby='navbarDropdownMenuLink')
                        a.dropdown-item(href='/car' onclick="$.ajax({type: 'POST', url: '/delcar', data: 'VIN=" + VIN + "', })") Удалить
                        a.dropdown-item(href='/addCar?ID='+id ) Изменить
    #myModal2.modal.fade(role='dialog')
        .modal-dialog.modal-lg
            .modal-content
                .modal-header
                    h4.modal-title Добавление автомобиля
                    button.close(type='button', data-dismiss='modal') ×
                .modal-body

                    ul.list-group.list-group-flush
                        form(action="/addCars", method="post" class="form" id='addCar' enctype="application/json")
                            li.list-group-item.p-3
                                .row
                                    .col-sm-12
                                        strong.text-muted.d-block.mb-2 Бренд
                                            .form-group
                                                input#ajax1.form-control(type='text' list='json-datalist1' placeholder='e.g. datalist' name='inputBrand')
                                                datalist#json-datalist1
                                    .col-sm-12
                                        strong.text-muted.d-block.mb-2 Модель
                                            .form-group
                                                input#ajax2.form-control(type='text' list='json-datalist2' placeholder='e.g. datalist' onclick='getModels()' name = 'inputModel')
                                                datalist#json-datalist2
                                    .col-sm-12
                                        strong.text-muted.d-block.mb-2 VIN номер
                                            .form-group
                                                input.form-control(type='text' name="inputVIN")
                                    .col-sm-12
                                        strong.text-muted.d-block.mb-2 Владелец
                                            .row
                                                .col-sm-12.col-md-3
                                                    .form-group
                                                        .custom-control.custom-toggle.custom-toggle-sm.mb-1
                                                            input#customToggle12.custom-control-input(type='checkbox' name='customTogglel2')
                                                            label.custom-control-label(for='customToggle12') Юридическое лицо
                                                .col-sm-12.col-md-9
                                                    .form-group
                                                        input#cl.form-control(type='text' name="inputClient" )
                                                        input#ur.form-control(type='text' name="inputUrClient" )

                                    .col-sm-12
                                        strong.text-muted.d-block.mb-2 Год производства
                                            .form-group
                                                input.form-control(type='text' name="inputYear")
                                    .col-sm-12
                                        strong.text-muted.d-block.mb-2 Гос номер
                                            .form-group
                                                input.form-control(type='text' name="inputGosNumber" )
                                    .col-sm-12
                                        strong.text-muted.d-block.mb-2 Номер двигателя
                                            .form-group
                                                input.form-control(type='text' name="inputEngineNumber" )
                                    .col-lg-12.mb-4
                                        .row
                                            .col
                                                button.btn.btn-primary.btn-lg.btn-block(type="submit") Добавить
                                    //.modal-footer
                                        button.btn.btn-default(type='button', data-dismiss='modal') Close

.container-fluid
    .row
        // Main Sidebar
        aside.main-sidebar.col-12.col-md-3.col-lg-2.px-0
            .main-navbar
                nav.navbar.align-items-stretch.navbar-light.bg-white.flex-md-nowrap.border-bottom.p-0
                    a.navbar-brand.w-100.mr-0(href='#' style='line-height: 25px;')
                        .d-table.m-auto
                            img#main-logo.d-inline-block.align-top.mr-1(style='max-width: 25px;' src='images/shards-dashboards-logo.svg' alt='Shards Dashboard')
                            span.d-none.d-md-inline.ml-1 АРМ Администратор
                    a.toggle-sidebar.d-sm-inline.d-md-none.d-lg-none
                        i.material-icons &#xE5C4;
            .nav-wrapper
                ul.nav.flex-column
                    li.nav-item
                        a.nav-link(href='index')
                            i.material-icons edit
                            span Главная
                    li.nav-item
                        a.nav-link.dropdown-toggle(href='servicelist'  data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                            i.material-icons vertical_split
                                span Заказ-наряд
                            .dropdown-menu(aria-labelledby='dropdownMenuLink')
                                a.dropdown-item(href='servicelist') Поиск
                                a.dropdown-item(href='addservicelist?ID=') Дбавить
                                a.dropdown-item(href='#') Что-то еще


                    li.nav-item
                        a.nav-link.active.dropdown-toggle(href='servicelist'  data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
